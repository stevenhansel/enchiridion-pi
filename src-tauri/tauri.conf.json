{
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "enchiridion",
    "version": "0.1.0"
  },
  "tauri": {
    "cli": {
      "description": "Adjust configuration of the desktop application",
      "args": [
        {
          "name": "camera",
          "short": "c",
          "takesValue": true,
          "multiple": true,
          "possibleValues": ["true", "false"]
        }
      ]
    },
    "allowlist": {
      "http": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          { "name": "bin/camera", "sidecar": true }
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "bin/camera"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.enchiridion.app",
      "longDescription": "",
      "resources": ["migrations"],
      "shortDescription": "",
      "targets": "deb"
    },
    "security": {
      "csp": "default-src 'self'; media-src 'self' 'unsafe-inline' asset:; style-src 'self' 'unsafe-inline'; img-src 'self' 'unsafe-inline' asset:;",
      "dangerousDisableAssetCspModification": true
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": false,
        "title": "Enchiridion",
        "width": 800,
        "height": 600
      }
    ]
  }
}
